---
import { basics } from '@cv'

const { name, label, image, location, profiles, phone, email} = basics
const { city, region } = location
---

<section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <!-- robar icono -->
                {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a
                            href={`mailto:${email}`}
                            title={`Send an email to ${name} at ${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                        <!-- Robar icono -->
                        </a>
                    )
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</section>

