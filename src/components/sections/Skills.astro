---
import Section from "../section.astro";

import { skills } from "@cv"
---

<Section title="Skills">
    <ul>
        {
            skills.flatMap(skill => skill.keywords.map((keyword, index) => (
                <li>
                    <span>{keyword}</span>
                </li>
            )))
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    li {
        border-radius: 6px;
        background: #333;
        color: #eee;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.2rem 0.6rem;
    }
</style>