---
import Section from "../section.astro";

import { skills } from "@cv"
---

<Section>
    <h2>Skills</h2>
    <ul>
        {
            skills.flatMap(skill => skill.keywords.map((keyword, index) => (
                <li>
                    <span>{keyword}</span>
                </li>
            )))
        }
    </ul>
</Section>

<style>
    h2 {
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--h2-color);
    }

    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    li {
        border-radius: 6px;
        background: var(--li-bg-color);
        color: var(--li-text-color);
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.2rem 0.6rem;
    }
</style>